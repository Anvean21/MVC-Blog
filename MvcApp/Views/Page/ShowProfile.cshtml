@model IEnumerable<MvcApp.Models.ViewModels.Profiles.ProfVM>

@{
    ViewBag.Title = "ShowProfile";
}
    <div class="col-sm-8 my-item divcolor">
        
        <div class="list-group">



            <table class="table table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Email)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Surname)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Password)
                        </th>
                        <th scope="col">
                            @Html.DisplayNameFor(model => model.Age)
                        </th>
                        <th scope="col">
                            Functions
                        </th>

                    </tr>
                </thead>

                @foreach (var item in Model)
                {
                    <tr id="id_@item.Id" class="@item.Email">
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Surname)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Password)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditUser", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteUser", new { id = item.Id }, new { @class = "delete" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
